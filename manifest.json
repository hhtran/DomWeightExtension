{
  "name": "DomWeight",
  "version": "1.0",
  "description": "Chrome Extension to visually see the weight of the Dom",
  "permissions": ["activeTab", "storage", "declarativeContent"],
  "background": {
    "scripts": ["src/background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "src/views/popup.html",
    "default_icon": {
      "16": "src/images/get_started16.png",
      "32": "src/images/get_started32.png",
      "48": "src/images/get_started48.png",
      "128": "src/images/get_started128.png"
    }
  },
  "icons": {
    "16": "src/images/get_started16.png",
    "32": "src/images/get_started32.png",
    "48": "src/images/get_started48.png",
    "128": "src/images/get_started128.png"
  },
  "manifest_version": 2
}
